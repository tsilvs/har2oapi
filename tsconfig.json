{
	"compilerOptions": {
		//"target": "esnext",
		"target": "esnext",
		//"module": "nodenext",
		"module": "preserve",
		//"moduleResolution": "nodenext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"rootDir": "src",
		"outDir": ".build"
	},
	"include": [
		"package.json",
		"src/main.ts",
		"src/**/*.json",
		"src/**/*.jsonc",
	],
	"exclude": [
		"node_modules"
	]
}