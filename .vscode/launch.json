{
	"configurations": [
		{
			"name": "Node: Debug (remote) [flatpak, task]",
			"type": "node",
			"request": "attach",
			"preLaunchTask": "Node: Debug (remote) [flatpak]",
			"port": 9229,
			"address": "localhost",
			"localRoot": "${workspaceFolder}",
			"remoteRoot": "${workspaceFolder}",
			"skipFiles": [
				"<node_internals>/**"
			],
			"outFiles": [
				"${workspaceFolder}/.build/**/*.js"
			],
			"sourceMaps": true,
			"timeout": 30000
		}
	]
}