{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Node: Debug (remote) [flatpak]",
			"type": "shell",
			"command": "flatpak-spawn",
			"args": [
				"--host",
				"node",
				"--inspect-brk=9229",
				"${workspaceFolder}/.build/main.js",
				"--input",
				"${workspaceFolder}/.examples/HAR.json"
			],
			"isBackground": true,
			"problemMatcher": {
				"pattern": {
					"regexp": ".",
					"file": 1,
					"location": 2,
					"message": 3
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "Debugger listening",
					"endsPattern": "Debugger listening"
				}
			}
